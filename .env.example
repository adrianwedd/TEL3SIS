# Copy to .env and fill values; never commit the real .env


# Public URL for Twilio Webhook (e.g., from ngrok)
BASE_URL=

# Core Service Credentials
OPENAI_API_KEY=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
ELEVEN_LABS_API_KEY=
EMBEDDING_PROVIDER=sentence_transformers
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Infrastructure Connection URLs
REDIS_URL=redis://redis:6379/0
DATABASE_URL=sqlite:///tel3sis.db

# AES key (base64) for encrypting OAuth tokens
TOKEN_ENCRYPTION_KEY=

# Google OAuth credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Celery configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Phone number to dial when escalation is triggered
ESCALATION_PHONE_NUMBER=

# Notification email settings
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=
NOTIFY_EMAIL=

# Slack alert webhook URL
SLACK_WEBHOOK_URL=
